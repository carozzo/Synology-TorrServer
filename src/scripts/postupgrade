#!/bin/sh

    if [ "${SYNOPKG_DSM_VERSION_MAJOR}" -eq "6" ]; then
        TEMP_DIR="${SYNOPKG_TEMP_UPGRADE_FOLDER}/config"
    else
        TEMP_DIR="${SYNOPKG_PKGVAR}/config"
    fi

{
    if [ "${wizard_update_data}" == "false" ]; then
        rm -rf ${SYNOPKG_PKGDEST}/config
        cp -rfp ${TEMP_DIR} ${SYNOPKG_PKGDEST}
        rm -rf ${TEMP_DIR}
    else
        rm -rf ${SYNOPKG_PKGDEST}/config/accs.db
    fi
exit 0
}
